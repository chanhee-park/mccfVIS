extends layout

block content
    #app
        .section.title
            .text MCCF VIS : Compare and Diagnosis Multi-class Classifiers
        .visualization-zone
            .left
                .section.model-ranking-view
                    svg#model-ranking-vis
                    .dropdown
                        a.dropdown-title
                            .title-text Sort by recall
                            .title-icon
                                i.fas.fa-angle-down
                        .submenu
                            ul.root
                                li
                                    a.dropdown-item name
                                li
                                    a.dropdown-item total accuracy
                                li
                                    a.dropdown-item recall
                                li
                                    a.dropdown-item precision
                .section.model-diagnosis-view
                    svg#model-diagnosis-vis
            .right
                .section.instance-analysis-view
                    svg#instance-analysis-vis
                    .scroll-area
                        svg#instance-analysis-vis__scroll-area

    script(type='text/javascript', src='/javascripts/dropdown.js')
    script(type='text/javascript', src='/javascripts/Constant.js')
    script(type='text/javascript', src='/javascripts/Processor.js')
    script(type='text/javascript', src='/javascripts/d3.model-ranking.js')
    script(type='text/javascript', src='/javascripts/d3.diagnosis.js')
    script(type='text/javascript', src='/javascripts/d3.instance-analysis.js')
    script(type='text/javascript', src='/javascripts/Data.js')

